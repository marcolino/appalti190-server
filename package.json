{
  "name": "appalti190",
  "version": "2.2.2",
  "description": "Servizio per l'assolvimento degli obblighi di pubblicazione delle informazioni all’Autorità Nazionale AntiCorruzione, ai sensi della legge n. 190/2012",
  "engines": {
    "node": "18.x",
    "npm": "9.x",
    "yarn": "1.x"
  },
  "main": "server.js",
  "scripts": {
    "start-dev": "nodemon --ignore client/ -w '.' -w .env server.js",
    "start": "node server.js",
    "test": "nyc --reporter=html unbuffer mocha --exit --timeout 10000 --recursive test | tee test/log/last.log",
    "posttest": "scripts/test2badge",
    "test-debug": "mocha --exit --timeout 10000 --debug --recursive test",
    "test-nocoverage": "unbuffer mocha --exit --timeout 10000 --recursive test | tee test/log/last.log",
    "testwatch": "nodemon --exec \"mocha --recursive --timeout 10000\"",
    "prepub": "yarn test",
    "pub": "git add . && git commit -m \"$CM\" && git push && yarn push",
    "pub-dev": "yarn pub && yarn logs",
    "push": "git push heroku master",
    "i18n": "i18next 'src/**/*.js' --config 'i18next-parser.config.js' --silent",
    "i18n-check": "i18next 'src/**/*.js' --config 'i18next-parser.config.js' --silent --output /tmp/i18n-check-$$.json && cmp --silent /tmp/i18n-check-$$.json src/locales/en/translation.json; test $? = '1' && echo 'Some new texts to be translated!' || echo 'Translations are ok'; rm /tmp/i18n-check-$$.json",
    "i18n-auto": "scripts/auto-translate.js src/locales/*/translation.json",
    "run-web": "heroku ps:scale web=1 --app appalti190",
    "stop-web": "heroku ps:scale web=0 --app appalti190",
    "logs": "heroku logs --tail",
    "logspt": "heroku addons:open --app appalti190 papertrail",
    "analyze-dependencies": "depcheck --ignore-patterns tmp/",
    "list-deadfiles": "npx deadfile ./server.js --dir src"
  },
  "keywords": [
    "node.js",
    "express",
    "jwt",
    "refresh token",
    "authentication",
    "authorization",
    "mongodb"
  ],
  "author": "bezkoder",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^7.6.2",
    "axios": "^1.3.4",
    "bcryptjs": "^2.4.3",
    "codice-fiscale-js": "^2.3.18",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "email-validator": "^2.0.4",
    "express": "^4.17.1",
    "i18next": "^22.4.14",
    "i18next-http-middleware": "^3.2.2",
    "i18next-node-fs-backend": "^2.1.3",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^5.2.0",
    "mongoose": "^5.13.15",
    "multer": "^1.4.4",
    "node-zip": "^1.1.1",
    "stripe": "^8.214.0",
    "uuid": "^8.3.2",
    "winston": "^3.7.2",
    "winston-syslog": "^2.5.0",
    "xlsx": "^0.18.5",
    "xmlbuilder": "^15.1.1",
    "xsd-schema-validator": "^0.7.0"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "chai-spies": "^1.0.0",
    "i18next-parser": "^7.7.0",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "sinon": "^15.0.3"
  }
}
