{
  "name": "appalti190",
  "version": "2.2.2",
  "description": "Servizio per l'assolvimento degli obblighi di pubblicazione delle informazioni all’Autorità Nazionale AntiCorruzione, ai sensi della legge n. 190/2012",
  "engines": {
    "node": "14.x",
    "npm": "6.x",
    "yarn": "1.x"
  },
  "main": "server.js",
  "scripts": {
    "start-dev": "nodemon --ignore client/ -w '.' -w .env server.js",
    "start": "node server.js",
    "test-debug": "mocha --exit --timeout --debug 5000 test",
    "test": "unbuffer mocha --exit --timeout 5000 test | tee test/log/last.log",
    "posttest": "scripts/test2badge",
    "NOOOtest-for-badge": "mocha --timeout 5000 --exit --reporter mocha-badge-generator --reporter-option badge_subject=tests,badge_format=svg,badge_output=./test/badges/mocha.svg",
    "testwatch": "nodemon --exec \"mocha --recursive --timeout 10000\"",
    "pub": "git add . && git commit -m \"generic commit\" && git push && yarn push",
    "pub-dev": "yarn pub && yarn logs",
    "push": "git push heroku master",
    "i18n": "i18next 'src/**/*.js' --config 'i18next-parser.config.js' --silent",
    "i18n-check": "i18next 'src/**/*.js' --config 'i18next-parser.config.js' --silent --output /tmp/i18n-check-$$.json && cmp --silent /tmp/i18n-check-$$.json src/locales/en/translation.json; test $? = '1' && echo 'Some new texts to be translated!' || echo 'Translations are ok'; rm /tmp/i18n-check-$$.json",
    "predeploy": "yarn test",
    "run-web": "heroku ps:scale web=1 --app appalti190",
    "stop-web": "heroku ps:scale web=0 --app appalti190",
    "logs": "heroku logs --tail",
    "logspt": "heroku addons:open --app appalti190 papertrail",
    "check-unused-dependencies": "depcheck",
    "list-deadfiles": "npx deadfile ./server.js --dir src",
    "NOOOcompush": "yarn test-for-badge && git add . && git commit -m \"$CM\" && git push",
    "compush": "git add . && git commit -m \"$CM\" && git push"
  },
  "keywords": [
    "node.js",
    "express",
    "jwt",
    "refresh token",
    "authentication",
    "authorization",
    "mongodb"
  ],
  "author": "bezkoder",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^7.6.2",
    "accept-language-parser": "^1.5.0",
    "bcrypt": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "codice-fiscale-js": "^2.3.18",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "email-validator": "^2.0.4",
    "express": "^4.17.1",
    "express-routes-versioning": "^1.0.1",
    "i18next": "^22.4.10",
    "i18next-http-middleware": "^3.2.2",
    "i18next-node-fs-backend": "^2.1.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.10",
    "multer": "^1.4.4",
    "node-zip": "^1.1.1",
    "punycode": "^2.1.1",
    "should": "^13.2.3",
    "stripe": "^8.214.0",
    "uuid": "^8.3.2",
    "winston": "^3.7.2",
    "winston-syslog": "^2.5.0",
    "xlsx": "^0.18.5",
    "xmlbuilder": "^15.1.1",
    "xsd-schema-validator": "^0.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "mocha": "^9.2.2",
    "mocha-badge-generator": "^0.10.6",
    "nodemon": "^2.0.15"
  }
}
